{
  "name": "crs-printer-service",
  "version": "1.0.5",
  "description": "CrossEven Printer Service",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:print-watcher": "node test-print-watcher.js"
  },
  "keywords": [],
  "author": "CrossEven",
  "license": "ISC",
  "packageManager": "pnpm@10.28.1",
  "dependencies": {
    "body-parser": "^2.2.2",
    "cors": "^2.8.6",
    "electron-log": "^5.4.3",
    "electron-store": "^11.0.2",
    "express": "^5.2.1",
    "pdf-to-printer": "^5.6.1"
  },
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0"
  },
  "build": {
    "appId": "com.crosseven.printerservice",
    "productName": "CRS Printer Service",
    "directories": {
      "output": "dist"
    },
    "files": [
      "index.js",
      "index.html",
      "icon.png",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
